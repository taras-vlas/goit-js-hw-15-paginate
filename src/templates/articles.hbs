
{{#each this}}
<li class="gallery-item">
    <div class="photo-card">
        {{!-- webformatURL - ссылка на маленькое изображение для списка карточек
        largeImageURL - ссылка на большое изображение --}}
        <img src="{{webformatURL}}" data-source="{{largeImageURL}}" alt="{{tags}}" class="photo" />

        <div class="stats">
            <p class="stats-item">
                <i class="material-icons">thumb_up</i>
                {{likes}}
                {{!-- 1108 - количество лайков --}}
            </p>
            <p class="stats-item">
                <i class="material-icons">visibility</i>
                {{views}}
                {{!-- 320321 - количество просмотров --}}
            </p>
            <p class="stats-item">
                <i class="material-icons">comment</i>
                {{comments}}
                {{!-- 129 - количество комментариев --}}
            </p>
            <p class="stats-item">
                <i class="material-icons">cloud_download</i>
                {{downloads}}
                {{!-- 176019 - количество загрузок --}}
            </p>
        </div>
    </div>
</li>
{{/each}}